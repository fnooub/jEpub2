{
  "files.exclude": {
    "**/node_modules/*": true
  },
  "search.exclude": {
    "**/epub-sample": true,
    "**/dist": true
  },
  "editor.autoIndent": false,
  "editor.wordWrap": "on",
  "workbench.editor.closeOnFileDelete": false,
  "editor.minimap.renderCharacters": false,
  "beautify.language": {
    "js": {
      "type": [
        "javascript"
      ],
      "filename": [],
      "ext": [
        "js"
      ]
    },
    "css": [
      "css"
    ],
    "html": [
      "html"
    ]
  },
  "beautify.config": {
    "jslint_happy": true
  },
  "cSpell.words": [
    "Epub",
    "NISO",
    "OEBPS",
    "apng",
    "devtool",
    "dtbncx",
    "idref",
    "jepub",
    "jsfiddle",
    "jszip",
    "lelinhtinh",
    "uffff",
    "uuidv"
  ]
}
