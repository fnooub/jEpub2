{
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "globalReturn": true,
      "impliedStrict": true
    },
    "ecmaVersion": 2017
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "globals": {
    "JSZip": false,
    "ejs": false,
    "jEpub": false
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": [
      "error",
      4
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
